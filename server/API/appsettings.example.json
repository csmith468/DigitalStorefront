{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=DigitalStorefront;Trusted_Connection=false;TrustServerCertificate=True;User Id=YOUR_USER;Password=YOUR_PASSWORD"
  },
  "DemoMode": true,
  "UseAzureStorage": false,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "API.Services": "Information"
    }
  },
  "AppSettings": {
    "PasswordKey": "YOUR_PASSWORD_KEY",
    "TokenKey": "YOUR_TOKEN_KEY"
  },
  "BlobStorage": {
    "ConnectionString": "YOUR_CONNECTION_STRING",
    "ContainerName": "product-images"
  },
  "Stripe": {
    "SecretKey": "sk_test_...",
    "WebhookSecret": "whsec_..."
  },
  "SendGrid": {
    "ApiKey": "SG.your-api-key-here",
    "FromEmail": "your-verified-email@example.com",
    "FromName": "Digital Storefront"
  },
  "Cors": {
    "DevOrigins": ["http://localhost:5173"],
    "ProdOrigins": ["https://your-production-frontend.com"]
  },
  "RateLimiting": {
    "Anonymous": {
      "PermitLimit": 60,
      "WindowMinutes": 1,
      "SegmentsPerWindow": 6
    },
    "Auth": {
      "PermitLimit": 10,
      "WindowMinutes": 1
    },
    "Authenticated": {
      "TokenCapacity": 100,
      "TokensPerMinute": 50
    },
    "Global": {
      "PermitLimit": 200,
      "WindowMinutes": 1
    },
    "ExpensiveOperations": {
      "PermitLimit": 20,
      "WindowMinutes": 1
    }
  },
  "Caching": {
    "StaticDataExpirationDays": 1
  },
  "ApplicationInsights": {
    "ConnectionString": "YOUR_APPLICATION_INSIGHTS_CONNECTION_STRING"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.ApplicationInsights" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "ApplicationInsights",
        "Args": {
          "connectionString": "",
          "telemetryConverter": "Serilog.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  }
}
