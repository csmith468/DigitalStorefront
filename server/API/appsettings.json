{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=DigitalStorefront;Trusted_Connection=false;TrustServerCertificate=True;User Id=sa;Password=InsertPasswordHere"
  },
  "DemoMode": true,
  "UseAzureStorage": true,
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "PasswordKey": "InsertPasswordKeyHere",
    "TokenKey": "InsertTokenKeyHere"
  },
  "Cors": {
    "DevOrigins": ["http://localhost:5173"],
    "ProdOrigins": ["set when deployed"]
  },
  "BlobStorage": {
    "ConnectionString": "set when deployed",
    "ContainerName": "product-images"
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "WindowMinutes": 1
  },
  "Caching": {
    "StaticDataExpirationDays": 1
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {CorrelationId} {Message:lj}{Properties:j}{NewLine}{Exception}",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  }
}
