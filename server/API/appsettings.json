{
  "DemoMode": true,
  "UseAzureStorage": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "API.Services": "Information"
    }
  },
  "Cors": {
    "DevOrigins": ["http://localhost:5173"],
    "ProdOrigins": ["https://www.digitalstorefront.dev"]
  },
  "RateLimiting": {
    "Auth": {
      "PermitLimit": 5,
      "WindowMinutes": 1
    },
    "Authenticated": {
      "TokenCapacity": 100,
      "TokensPerMinute": 50
    },
    "Anonymous": {
      "PermitLimit": 30,
      "WindowMinutes": 1,
      "SegmentsPerWindow": 6
    },
    "Global": {
      "PermitLimit": 150,
      "WindowMinutes": 1
    },
    "ExpensiveOperations": {
      "PermitLimit": 10,
      "WindowMinutes": 1
    }
  },
  "Caching": {
    "StaticDataExpirationDays": 1
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.ApplicationInsights" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "ApplicationInsights",
        "Args": {
          "connectionString": "",
          "telemetryConverter": "Serilog.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  }
}
